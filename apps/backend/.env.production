# 🔧 Backend Environment Variables - PRODUCCIÓN
# Estas variables configuran el servidor para producción

# 🌐 Configuración del Servidor
PORT=3001
NODE_ENV=production

# 🔐 Configuración de CORS (CAMBIAR EN PRODUCCIÓN)
CORS_ORIGIN=https://tu-frontend-app.com
CORS_CREDENTIALS=true

# 🎭 Configuración de Playwright (Optimizada para VPS)
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false
PLAYWRIGHT_BROWSER_PATH=/usr/bin/chromium-browser
HEADLESS=true

# ⚡ Configuración de Scraping (Más conservadora)
SCRAPING_DELAY=2000
SCRAPING_TIMEOUT=45000
MAX_CONCURRENT_SOURCES=3
RATE_LIMIT_DELAY=3000

# ✅ Configuración de Validación (Optimizada)
VALIDATION_TIMEOUT=15000
VALIDATION_RETRIES=3
MAX_CONCURRENT_VALIDATIONS=3

# 📊 Configuración de Logs (Producción)
LOG_LEVEL=warn
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE=500

# 🔄 Configuración de Cache (Mayor TTL)
CACHE_TTL=600000
CACHE_MAX_SIZE=5000

# 🔐 Configuración de Seguridad
TRUST_PROXY=true
MAX_REQUEST_SIZE=10mb
