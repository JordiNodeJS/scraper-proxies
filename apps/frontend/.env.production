# 🎨 Frontend Environment Variables - PRODUCCIÓN
# Estas variables son para el entorno de producción

# 🔗 URL del Backend API (CAMBIAR EN PRODUCCIÓN)
VITE_API_URL=http://ec2-3-254-74-19.eu-west-1.compute.amazonaws.com:3081

# 🌐 Configuración de la App
VITE_APP_NAME=Scraper Proxies Pro
VITE_APP_VERSION=1.0.0

# 🔧 Configuración de Producción
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_LOGGING=false

# 📡 Configuración de Server-Sent Events
VITE_SSE_AUTO_CONNECT=true
VITE_SSE_RETRY_DELAY=3000
VITE_SSE_MAX_RETRIES=10
VITE_SSE_HEARTBEAT_TIMEOUT=60000

# 📊 Configuración de Performance (Optimizada)
VITE_QUERY_STALE_TIME=600000
VITE_QUERY_CACHE_TIME=1200000

# 🔄 Configuración de Polling/Refresh (Menos frecuente)
VITE_HEALTH_CHECK_INTERVAL=60000
VITE_AUTO_REFRESH_INTERVAL=300000

# 📋 Configuración de UI
VITE_DEFAULT_PAGE_SIZE=20
VITE_AUTO_SCROLL_LOGS=false

# 🔐 Configuración de Seguridad
VITE_API_TIMEOUT=15000
